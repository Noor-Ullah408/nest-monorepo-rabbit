generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  email String @unique
  password String 
  name String?
}

model Service {
  id Int @default(autoincrement()) @id
  title String
  desc String
  child_service_id Int? @unique
  child_service Service? @relation("ChildService", fields: [child_service_id], references: [id])
  parent_service Service? @relation("ChildService")
}

model Ticket {
  id Int @default(autoincrement()) @id
  ticket_number Int? 
  user_id Int @unique
}

model Notification {
  id Int @default(autoincrement()) @id
  user_id Int? @unique
  message String
}